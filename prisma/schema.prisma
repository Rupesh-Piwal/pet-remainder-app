generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Reminder {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  pet         String
  category    String
  reminderFor String   @db.String
  notes       String?  @db.String
  startDate   DateTime
  endDate     DateTime
  time        String
  frequency   String
  createdAt   DateTime @default(now())
}
